@model IEnumerable<ProjectPokemon.Pokedex.Models.Games.Psmd.PsmdPokemon>

@{
    ViewData["Title"] = "Index";
}

<h2>Pokémon</h2>

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th width="10%">
            ID (Decimal)
        </th>
        <th width="10%">
            ID (Hex, Big Endian)
        </th>
        <th width="10%">
            ID (Hex, Little Endian)
        </th>
        <th width="60%">
            Name
        </th>
        <th width="10%">
            Dex Number
        </th>
    </tr>

    @foreach (var item in Model)
    {
        var hex = item.ID.ToString("X").PadLeft(4, '0');
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @string.Format("0x{0}", hex)
            </td>
            <td>
                @string.Format("{0} {1}", hex.Substring(2, 2), hex.Substring(0, 2))
            </td>
            <td>
                <a href="@Url.Action("Details", "PsmdPokemon", new { id = item.ID })">@item.Name</a>
            </td>
            <td>
                @item.DexNumber
            </td>
        </tr>
    }

</table>