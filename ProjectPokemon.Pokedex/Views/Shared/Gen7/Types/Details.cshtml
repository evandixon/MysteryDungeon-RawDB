@model ProjectPokemon.Pokedex.Models.Games.Gen7.Gen7PkmType

<h3>Pokemon</h3>
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th style="width:60px;">Dex ID</th>
        <th style="width:60px;">Icon</th>
        <th>Name</th>
        <th>Type</th>
    </tr>

    @foreach (var item in Model.Pokemon)
    {
        <tr style="height:60px;">
            <td style="vertical-align: middle;">
                @item.ID
            </td>
            <td style="vertical-align: middle;">
                <a href="@(Url.Action("Details", (string)ViewBag.ControllerPrefix + "Pokemon", new { id = item.ID }))">@Html.Raw(item.PokespriteHtml)</a>
            </td>
            <td style="vertical-align: middle;">
                <a href="@(Url.Action("Details", (string)ViewBag.ControllerPrefix + "Pokemon", new { id = item.ID }))">@item.Name</a>
            </td>
            <td style="vertical-align: middle;">
                <a href="@(Url.Action("Details", (string)ViewBag.ControllerPrefix + "Types", new { id = item.Type1.ID }))"><img alt="@item.Type1.Name" src="https://projectpokemon.org/images/gen7-types/@(item.Type1.Name).png" /></a>
                @if (item.Type2.ID > 0 && item.Type1.ID != item.Type2.ID)
                {
                    <a href="@(Url.Action("Details", (string)ViewBag.ControllerPrefix + "Types", new { id = item.Type2.ID }))"><img alt="@item.Type2.Name" src="https://projectpokemon.org/images/gen7-types/@(item.Type2.Name).png" /></a>
                }
            </td>
        </tr>
    }

</table>

<h3>Moves</h3>
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th width="10%">
            ID
        </th>
        <th width="60%">
            Name
        </th>
    </tr>

    @foreach (var item in Model.Moves)
    {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                <a href="@(Url.Action("Details", (string)ViewBag.ControllerPrefix + "Moves", new { id = item.ID }))">@item.Name</a>
            </td>
        </tr>
    }

</table>