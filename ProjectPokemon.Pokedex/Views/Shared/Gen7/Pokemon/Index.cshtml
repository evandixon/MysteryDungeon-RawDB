@model IEnumerable<ProjectPokemon.Pokedex.Models.Games.Gen7.Gen7Pokemon>

<h2>Pokémon</h2>

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th width="10%">
            ID
        </th>
        <th></th>
        <th width="60%">
            Name
        </th>
    </tr>

    @foreach (var item in Model)
    {
        var hex = item.ID.ToString("X").PadLeft(4, '0');
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                <a href="@Url.RouteUrl("Details",new {id=item.ID })">@Html.Raw(item.PokespriteHtml)</a>
            </td>
            <td>
                @Html.RouteLink(item.Name, "Details", new { id = item.ID })
            </td>
        </tr>
    }

</table>