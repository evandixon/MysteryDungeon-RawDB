@model ProjectPokemon.Pokedex.Models.Games.Eos.EosPkmType

@{
    ViewData["Title"] = "Details";
}
<h2>@Model.Name</h2>

<div>
    <h3>Details</h3>
    <dl class="dl-horizontal">
        <dt>
            ID
        </dt>
        <dd>
            @Model.ID
        </dd>
        <dt>
            ID (Hex)
        </dt>
        <dd>
            @Model.ID.ToString("X")
        </dd>
    </dl>
</div>
<div>
    <h3>Pokemon with Type</h3>
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th width="10%">
                ID (Decimal)
            </th>
            <th width="10%">
                ID (Hex, Big Endian)
            </th>
            <th width="10%">
                ID (Hex, Little Endian)
            </th>
            <th>
                Pokémon
            </th>
        </tr>
        @foreach (var item in Model.Pokemon)
           {
            <tr>
                <td>
                    @item.ID
                </td>
                <td>
                    @item.IDHexBigEndian
                </td>
                <td>
                    @item.IDHexLittleEndian
                </td>
                <td>
                    @Html.ActionLink(item.Name, "Details", "EosPokemon", new { id = item.ID })
                </td>
            </tr>
            }
    </table>
</div>
<div>
    <h4>Moves with Type</h4>
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th width="10%">
                ID (Decimal)
            </th>
            <th width="10%">
                ID (Hex, Big Endian)
            </th>
            <th width="10%">
                ID (Hex, Little Endian)
            </th>
            <th>
                Move
            </th>
        </tr>
        @foreach (var item in Model.Moves)
        {
            <tr>
                <td>
                    @item.ID
                </td>
                <td>
                    @item.IDHexBigEndian
                </td>
                <td>
                    @item.IDHexLittleEndian
                </td>
                <td>
                    @Html.ActionLink(item.Name, "Details", "EosMoves", new { id = item.ID })
                </td>
            </tr>
        }
    </table>
</div>