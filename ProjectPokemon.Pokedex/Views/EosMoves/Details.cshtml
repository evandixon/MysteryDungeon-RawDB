@model ProjectPokemon.Pokedex.Models.Games.Eos.EosMove

@{
    ViewData["Title"] = Model.Name + " - Project Pokemon Pokédex";
}

<h2>@Model.Name</h2>

<div>
    <h3>Details</h3>
    <dl class="dl-horizontal">
        <dt>
            ID (Decimal)
        </dt>
        <dd>
            @Model.ID
        </dd>

        <dt>
            ID (Hex, Big Endian)
        </dt>
        <dd>
            @Model.GetIDHexBigEndian()
        </dd>

        <dt>
            ID (Hex, Little Endian)
        </dt>
        <dd>
            @Model.GetIDHexLittleEndian()
        </dd>

        <dt>
            Type
        </dt>
        <dd>
            @Html.ActionLink(Model.TypeName, "Details", "EosTypes", new { id = Model.TypeID })
        </dd>

        <dt>
            Category
        </dt>
        <dd>
            @Model.Category
        </dd>

        <dt>
            Base Damage
        </dt>
        <dd>
            @Model.BasePower
        </dd>

        <dt>
            Base PP
        </dt>
        <dd>
            @Model.BasePP
        </dd>

        <dt>
            Base Accuracy
        </dt>
        <dd>
            @Model.BaseAccuracy
        </dd>

    </dl>
</div>
<div>
    <h3>Pokemon through Level Up</h3>
    <table Class="table table-striped table-bordered table-condensed">
        <tr>
            <th width="10%">
                ID (Decimal)
            </th>
            <th width="10%">
                ID (Hex, Big Endian)
            </th>
            <th width="10%">
                ID (Hex, Little Endian)
            </th>
            <th>
                Pokémon
            </th>
            <th>
                Level(s)
            </th>
        </tr>
        @foreach (var item in Model.PokemonLevelUp)
        {
            <tr>
                <td>
                    @item.ID
                </td>
                <td>
                    @item.IDHexBigEndian
                </td>
                <td>
                    @item.IDHexLittleEndian
                </td>
                <td>
                    @Html.ActionLink(item.Name, "Details", "EosPokemon", new { id = item.ID })
                </td>
                <td>
                    @string.Join(", ", item.Levels)
                </td>
            </tr>
        }
    </table>
</div>
