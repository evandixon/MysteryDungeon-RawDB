@functions {
    public MysteryDungeon_RawDB.Models.EOS.Move Model { get; set; }
    public string IDHexBigEndian
    {
        get
        {
            return "0x" + Model.ID.ToString("X");
        }
    }

    public string IDHexLittleEndian
    {
        get
        {
            var hex = Model.ID.ToString("X").PadLeft(4, '0');
            return string.Format("{0} {1}", hex.Substring(2, 2), hex.Substring(0, 2));
        }
    }
}

