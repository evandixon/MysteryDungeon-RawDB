@functions {
    public TypeDetailsViewModel Model { get; set; }
}

<?php
    $title = "@Model.Name";
    $cssFiles = array("../../style.css");
?>

<h2>@Model.Name</h2>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID
        </dt>
        <dd>
            @Model.ID
        </dd>
        <dt>
            ID (Hex)
        </dt>
        <dd>
            @Model.IDHex
        </dd>
    </dl>
</div>
<div>
    <h4>Pokemon with Type</h4>
    <table class="table">
        <tr>
            <th width="10%">
                ID (Decimal)
            </th>
            <th width="10%">
                ID (Hex, Big Endian)
            </th>
            <th width="10%">
                ID (Hex, Little Endian)
            </th>
            <th>
                Pokémon
            </th>
        </tr>
        @foreach (var item in Model.PokemonWithType)
            {
            <tr>
                <td>
                    @item.ID
                </td>
                <td>
                    @item.IDHexBigEndian
                </td>
                <td>
                    @item.IDHexLittleEndian
                </td>
                <td>
                    @string.Format("<a href=\"../../pokemon/{0}/\">{1}</a>", item.ID, item.Name)
                </td>
            </tr>
        }
    </table>
</div>    
<div>
    <h4>Moves with Type</h4>
    <table class="table">
        <tr>
            <th width="10%">
                ID (Decimal)
            </th>
            <th width="10%">
                ID (Hex)
            </th>
            <th>
                MOve
            </th>
        </tr>
        @foreach (var item in Model.MovesWithType)
        {
            <tr>
                <td>
                    @item.ID
                </td>
                <td>
                    @item.IDHex
                </td>
                <td>
                    @string.Format("<a href=\"../../moves/{0}/\">{1}</a>", item.ID, item.Name)
                </td>
            </tr>
        }
    </table>
</div>    
<p>
    <a href="..">Back to List</a>
</p>