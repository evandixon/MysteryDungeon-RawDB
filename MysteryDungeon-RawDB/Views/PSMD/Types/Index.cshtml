@functions {
    public List<PkmType> Model { get; set; }
}

<?php
    $title = "PSMD Typedex";
    $cssFiles = array("../style.css");
?>

<h2>Types</h2>

<table class="table">
    <tr>
        <th width="10%">
            ID (Decimal)
        </th>
        <th width="10%">
            ID (Hex)
        </th>
        <th width="60%">
            Name
        </th>
    </tr>

    @foreach (var item in Model) {
        var hex = item.ID.ToString("X").PadLeft(4, '0');
        @<tr>
            <td>
                @item.ID.ToString()
            </td>
            <td>
                @string.Format("0x{0}", hex)
            </td>
            <td>
                @string.Format("<a href=\"{0}\">{1}</a>", item.ID, item.Name)
            </td>
        </tr>
    @}

</table>